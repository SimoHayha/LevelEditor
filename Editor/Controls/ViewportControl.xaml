<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Model="clr-namespace:Editor.Model"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" x:Class="Editor.Controls.ViewportControl"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="300">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="25" />
		</Grid.RowDefinitions>

		<Grid Grid.Row="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="75" />
				<ColumnDefinition Width="150" />
			</Grid.ColumnDefinitions>

			<Grid Grid.Column="0">
				<Label Content="Viewport selection"/>
			</Grid>
			<Grid Grid.Column="1">
				<ComboBox x:Name="comboBox">
					<i:Interaction.Triggers>
						<i:EventTrigger EventName="SelectionChanged">
							<i:InvokeCommandAction Command="{Binding ViewportSelectionCommand}" CommandParameter="{Binding SelectedIndex, ElementName=comboBox}"/>
						</i:EventTrigger>
					</i:Interaction.Triggers>
					<ComboBoxItem Content="Viewport 1"/>
					<ComboBoxItem Content="Viewport 2"/>
					<ComboBoxItem Content="Viewport 3"/>
					<ComboBoxItem Content="Viewport 4"/>
				</ComboBox>
			</Grid>
		</Grid>
	</Grid>
</UserControl>
